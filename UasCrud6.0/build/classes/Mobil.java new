    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnhapusActionPerformed
        try {
            // TODO add your handling code here:
            Connection cn;  cn = DriverManager.getConnection("jdbc:mysql://localhost/dealer2","root","");
            cn.createStatement().executeUpdate("delete from mobil where tipe_warna ='"+tipe_warna.getText()+"'");
            tampilkan();
            reset();
        } catch (SQLException ex) {
            Logger.getLogger(Mobil.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_btnhapusActionPerformed

    private void btneditActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btneditActionPerformed
        try {
            // TODO add your handling code here:
            Connection cn;  cn = DriverManager.getConnection("jdbc:mysql://localhost/dealer2","root","");
            cn.createStatement().executeUpdate("update  mobil set bahan_bakar ='"+bahan_bakar.getText()+"',tipe_mobil ='"+tipe_mobil.getText()+"',tipe_gear ='"+tipe_gear.getText()+"' where tipe_warna ='"+tipe_warna.getText()+"'");
            tampilkan();
            reset();
        } catch (SQLException ex) {
            Logger.getLogger(Mobil.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_btneditActionPerformed

    private void btntambahActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btntambahActionPerformed
        try {
            // TODO add your handling code here:
            Connection cn;  cn = DriverManager.getConnection("jdbc:mysql://localhost/dealer2","root","");
            cn.createStatement().executeUpdate("insert into mobil values"+"('"+tipe_warna.getText()+"','"+bahan_bakar.getText()+"','"+tipe_mobil.getText()+"','"+tipe_gear.getText()+"')");
            tampilkan();
            reset();
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(null, "Ada yang belum di isi !!");
        }
    }//GEN-LAST:event_btntambahActionPerformed

    private void btnresetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnresetActionPerformed
        // TODO add your handling code here:
        reset();
    }//GEN-LAST:event_btnresetActionPerformed

    private void tabelMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_tabelMouseClicked
        // TODO add your handling code here:
        int i =tabel.getSelectedRow();
        
        if(i>-1){
            tipe_warna.setText(model.getValueAt(i, 0).toString());
            bahan_bakar.setText(model.getValueAt(i, 1).toString());
            tipe_mobil.setText(model.getValueAt(i, 2).toString());
            tipe_gear.setText(model.getValueAt(i, 3).toString());
        }
    }//GEN-LAST:event_tabelMouseClicked
private void reset(){
    tipe_warna.setText("");
    bahan_bakar.setText("");
    tipe_mobil.setText("");
    tipe_gear.setText("");
    
}
